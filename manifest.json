{
  "manifest_version": 3,
  "name": "Research Paper Summarizer",
  "version": "1.0.0",
  "description": "Chrome extension to extract and summarize research papers from search results",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus",
    "alarms",
    "offscreen",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://scholar.google.com/*",
        "*://scholar.google.co.uk/*",
        "*://ieeexplore.ieee.org/*",
        "*://dl.acm.org/*",
        "*://arxiv.org/*"
      ],
      "js": ["content.js"],
      "css": ["content/ui/styles/index.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*",
        "images/*",
        "icons/*",
        "assets/*",
        "assets/icons/*",
        "content/ui/styles/*",
        "content/ui/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
